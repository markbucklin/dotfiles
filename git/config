[core]
  autocrlf = false
  excludesfile = ~/.config/git/ignore

[pager]
  diff = diff-so-fancy | less --tabs=1,5 -RFX
  show = diff-so-fancy | less --tabs=1,5 -RFX

[alias]
  st  = status -sb
  ci  = commit -v
  co  = checkout
  ls  = log --date=short --pretty=ls
  rbm = rebase -i origin/master
  rma = !git ls-files --deleted -z | xargs -0 -r git rm

[pretty]
  ls = format:%C(cyan)%h %C(red)%ad %C(blue)[%an]%C(auto)%d %C(white)%s

[diff]
  tool = vimdiff
  algorithm = patience
  indentHeuristic = on

[apply]
    whitespace = strip

[color]
  ui = true

[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22

[color "diff"]
	meta = yellow
	frag = magenta bold
	commit = yellow bold
	old = red bold
	new = green bold
	whitespace = red reverse

[rerere]
  enabled = true

[rebase]
  autosquash = true
  autostash = true

[push]
  default = upstream

[pull]
	rebase = true

[url "git@github.com:"]
  insteadOf = gh:

[url "git@bitbucket.org:"]
  insteadOf = bb:

[url "git@github.com:markbucklin/"]
  insteadOf = ghme:

[url "git@bitbucket.org:markbucklin/"]
  insteadOf = ghbb:

[include]
  path = user


[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[alias]
	ignore = "!gi() { curl -L -s https://www.gitignore.io/api/$@ ;}; gi"
	co = checkout
	st = status
	br = branch
	cam = commit -a -m
	ca = commit -a --amend
[status]
	submoduleSummary = true

