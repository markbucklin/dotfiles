{
  "breadcrumbs.enabled": true,

  // Vim
  "vim.autoSwitchInputMethod.enable": false,
  "vim.easymotion": true,
  "vim.easymotionMarkerWidthPerChar": 10,
  "vim.easymotionMarkerFontSize": "16",
  "vim.easymotionMarkerYOffset": 0,
  "vim.easymotionMarkerHeight": 20,
  "vim.easymotionMarkerBackgroundColor": "#000099bb",
  "vim.easymotionMarkerForegroundColorOneChar": "#ffff11ff",
  "vim.easymotionMarkerForegroundColorTwoChar": "#ff4422ff",
  "vim.easymotionMarkerFontFamily": "Inconsolata",
  "vim.easymotionKeys": "hklyuiopnmqwertzxcvbasdgjf",
  "vim.easymotionMarkerFontWeight": "bold",
  "vim.foldfix": true,
  "vim.enableNeovim": true,
  "vim.neovimPath": "/usr/bin/nvim",
  "vim.highlightedyank.enable": true,
  "vim.smartcase": true,
  "vim.visualstar": true,
  "vim.showcmd": true,
  "vim.showmodename": true,
  "vim.statusBarColorControl": false,
  "vim.sneak": true,
  "vim.sneakUseIgnorecaseAndSmartcase": true,
  "vim.incsearch": true,
  "vim.useSystemClipboard": true,
  "vim.useCtrlKeys": true,
  "vim.hlsearch": true,
  "vim.leader": "<space>",
  "vim.camelCaseMotion.enable": true,
  "vim.handleKeys": { "<C-a>": false, "<C-f>": false},
  "vim.whichwrap": "h,l,<,>,[,]",
  "vim.cursorStylePerMode.normal": "underline",
  "vim.cursorStylePerMode.insert": "line",
  "vim.cursorStylePerMode.replace": "block-outline",
  "vim.cursorStylePerMode.visual": "line-thin",
  "vim.cursorStylePerMode.visualline": "underline-thin",
  "vim.cursorStylePerMode.visualblock": "block",
  "vim.insertModeKeyBindings": [],
  "vim.normalModeKeyBindingsNonRecursive": [
    {"before": ["<leader>", "d"], "after": ["d", "d"]},
    {"before": ["<C-n>"], "commands": [":nohl"]},
    {"before": ["leader", "w"], "commands": ["workbench.action.files.save"]},
    {"before": ["<leader>", "<leader>", "m"], "commands": ["bookmarks.toggle"]},
    {"before": ["<leader>", "<leader>", "b"], "commands": ["bookmarks.list"]}
  ],
  "vim.visualModeKeyBindingsNonRecursive": [
    {"before": ["p"],"after": ["p", "g", "v", "y"]},
    {"before": [">"],"commands": ["editor.action.indentLines"]},
    {"before": ["<"],"commands": ["editor.action.outdentLines"]}
  ],

  // bookmarks
  "bookmarks.backgroundLineColor": "#002f5f68",
  "bookmarks.useWorkaroundForFormatters": true,
  "bookmarks.saveBookmarksInProject": true,
  "bookmarks.navigateThroughAllFiles": false,


  // Settings for Builtin Functions
  "window.zoomLevel": 1.3,
  "explorer.confirmDelete": false,
  "explorer.enableDragAndDrop": false,
  "explorer.sortOrder": "type",
  "explorer.openEditors.visible": 9,
  "explorer.autoReveal": true,
  "workbench.editor.closeEmptyGroups": false,
  "prettier.proseWrap": "preserve",
  "workbench.editor.closeOnFileDelete": true,
  "terminal.integrated.cursorStyle": "underline",
  "workbench.colorTheme": "Bronokai",
  "workbench.editor.enablePreviewFromQuickOpen": true,
  "workbench.editor.enablePreview": true,
  "workbench.colorCustomizations": {
    "list.focusForeground": "#cccc12",
    "list.focusBackground": "#000000",
    "editorCursor.foreground": "#ff1410cf",
    "editor.wordHighlightBackground": "#000",
    "editor.lineHighlightBorder": "#22bb2266",
    "editorLineNumber.activeForeground": "#22bb22ff",
    "editor.findMatchBorder": "#00a000",
    "editor.selectionHighlightBorder": "#2222bb22",
    "editor.selectionBackground": "#666688aa",
    "editor.findMatchHighlightBorder": "#d8d812dd",
    "statusBar.background": "#005f5f",
    "statusBar.noFolderBackground": "#005f5f",
    "statusBar.debuggingBackground": "#005f5f"
  },
  "files.autoSaveDelay": 5000,
  "javascript.suggest.enabled": true,
  "workbench.editor.revealIfOpen": true,
  "workbench.statusBar.feedback.visible": false,
  "workbench.list.keyboardNavigation": "filter",
  "workbench.list.automaticKeyboardNavigation": false,
  "workbench.editor.focusRecentEditorAfterClose": true,
  "workbench.useExperimentalGridLayout": true,
  "workbench.editor.showTabs": true,
  "workbench.panel.defaultLocation": "right",
  "editor.suggest.snippetsPreventQuickSuggestions": true,
  "editor.wordWrap": "off",
  "editor.trimAutoWhitespace": true,
  "editor.fontSize": 18,
  "editor.fontWeight": "500",
  "editor.lineHeight": 0,
  "editor.cursorBlinking": "solid",
  "editor.cursorWidth": 4,
  "editor.cursorSmoothCaretAnimation": false,
  "editor.tabCompletion": "onlySnippets",
  "editor.smoothScrolling": true,
  "editor.showFoldingControls": "mouseover",
  "editor.links": true,
  "editor.scrollBeyondLastColumn": 3,
  "editor.roundedSelection": false,
  "editor.glyphMargin": true,
  "editor.dragAndDrop": false,
  "editor.copyWithSyntaxHighlighting": false,
  "editor.codeActionsOnSaveTimeout": 500,
  "editor.fontLigatures": false,
  "editor.formatOnPaste": true,
  "editor.minimap.renderCharacters": false,
  "editor.minimap.side": "right",
  "editor.minimap.showSlider": "always",
  "editor.minimap.maxColumn": 80,
  "editor.acceptSuggestionOnEnter": "smart",
  "editor.snippetSuggestions": "top",
  "editor.parameterHints.enabled": true,
  "editor.quickSuggestionsDelay": 350,
  "editor.quickSuggestions": {
    "other": true,
    "comments": false,
    "strings": false
  },
  "editor.hover.enabled": true,
  "editor.hover.delay": 500,
  "editor.suggest.shareSuggestSelections": true,
  "editor.suggest.localityBonus": true,
  "editor.suggestFontSize": 13,
  "editor.suggestLineHeight": 18,
  "editor.suggestSelection": "recentlyUsedByPrefix",
  "editor.suggest.filteredTypes": {
    "keyword": true
  },
  "editor.fontFamily": "Fira Code",
  "editor.wordBasedSuggestions": false,
  "editor.codeActionsOnSave": {
    "source.fixAll": true,
    "source.organizeImports": true
  },
  "javascript.suggest.completeFunctionCalls": true,
  "typescript.suggest.completeFunctionCalls": true,
  "extensions.ignoreRecommendations": true,
  "extensions.showRecommendationsOnlyOnDemand": true,
  "[markdown]": {
    "editor.wordWrap": "on",
    "editor.quickSuggestions": true
  },
  // "[json]": {
  //   "editor.defaultFormatter": "esbenp.prettier-vscode"
  // },
  "window.openWithoutArgumentsInNewWindow": "off",
  "search.maintainFileSearchCache": true,
  "search.location": "panel",
  "extensions.closeExtensionDetailsOnViewChange": true,
  "telemetry.enableCrashReporter": false,
  "yaml.format.enable": true,
  "editor.multiCursorModifier": "ctrlCmd",
  "markdown-link-suggestions.allowFullSuggestMode": true,
  "workbench.enableExperiments": false,
  "workbench.iconTheme": "vs-seti",
  "workbench.tree.indent": 20,
  "workbench.view.alwaysShowHeaderActions": true,
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.editor.openPositioning": "last",
  "workbench.editor.restoreViewState": false,

  // Other Extension Settings
  "wolf.pythonPath": "/usr/bin/python3",
  "code-runner.enableAppInsights": false,
  "macros": {
    "commentDown": [
      "editor.action.copyLinesDownAction",
      "cursorUp",
      "editor.action.addCommentLine",
      "cursorDown"
    ],
    "logCurrentVariable": [
      "editor.action.addSelectionToNextFindMatch",
      "problems.action.copy",
      {
        "command": "type",
        "args": {
          "text": "con"
        }
      }
    ],
    "showFileAndFocus": [
      "workbench.files.action.showActiveFileInExplorer",
      "workbench.files.action.focusFilesExplorer"
    ],
    "fastOpenFile": [
      "list.select", // open current hover file
      "wait:50", // wait for 20ms before next (default 50ms)
      "workbench.action.focusSideBar" // send focus back to the file explorer
    ],
    "openAndKeepFile": [
      "list.select", // open current hover file
      "workbench.action.files.save", // this will keep the file open
      "wait:20", // wait for 20ms before next (default 50ms)
      "workbench.action.focusSideBar" // send focus back to the file explorer
    ],
    "openFile": [
      "list.select", // open current hover file
      "workbench.action.files.save" // this will keep the file open
    ]
  },
  "multiCommand.commands": [
    {
      "command": "multiCommand.down8Lines",
      "label": "down8Lines",
      "description": "down the cursor in 8 times",
      "sequence": [
        { "command": "cursorMove", "args": { "to": "down", "value": 8 } },
        {
          "command": "editorScroll",
          "args": { "to": "down", "value": 8, "revealCursor": true }
        }
      ]
    },
    {
      "command": "multiCommand.up8Lines",
      "label": "up8Lines",
      "description": "up the cursor in 8 times",
      "sequence": [
        { "command": "cursorMove", "args": { "to": "up", "value": 8 } },
        {
          "command": "editorScroll",
          "args": { "to": "up", "value": 8, "revealCursor": true }
        }
      ]
    },
    {
      "command": "multiCommand.swapChar",
      "interval": 30,
      "sequence": [
        "cursorLeftSelect",
        "editor.action.clipboardCutAction",
        "cursorRight",
        "editor.action.clipboardPasteAction"
      ]
    }
  ],
  "markdownlint.run": "onSave",
  "reflowMarkdown.resizeHeaderDashLines": true
}
