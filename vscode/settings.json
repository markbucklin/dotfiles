{

  // Vim
  "vim.autoSwitchInputMethod.enable": false,
  "vim.overrideCopy": true,
  "vim.easymotion": true,
  "vim.easymotionMarkerWidthPerChar": 10,
  "vim.easymotionMarkerFontSize": "16",
  "vim.easymotionMarkerYOffset": 0,
  "vim.easymotionMarkerHeight": 20,
  "vim.easymotionMarkerBackgroundColor": "#000099bb",
  "vim.easymotionMarkerForegroundColorOneChar": "#ffff11ff",
  "vim.easymotionMarkerForegroundColorTwoChar": "#ff4422ff",
  "vim.easymotionMarkerFontFamily": "Inconsolata",
  "vim.easymotionKeys": "hklyuiopnmqwertzxcvbasdgjf",
  "vim.easymotionMarkerFontWeight": "bold",
  "vim.surround": true,
  "vim.foldfix": true,
  "vim.enableNeovim": true,
  "vim.neovimPath": "/usr/bin/nvim",
  "vim.highlightedyank.enable": true,
  "vim.smartcase": true,
  "vim.visualstar": true,
  "vim.showcmd": true,
  "vim.showmodename": true,
  "vim.statusBarColorControl": false,
  "vim.sneak": true,
  "vim.sneakUseIgnorecaseAndSmartcase": true,
  "vim.incsearch": true,
  "vim.useSystemClipboard": true,
  "vim.useCtrlKeys": true,
  "vim.hlsearch": true,
  "vim.leader": "<space>",
  "vim.camelCaseMotion.enable": false,
  "vim.handleKeys": {
    "<C-b>": false,
    "<C-f>": true,
    "<C-a>": true,
    "<C-w>": true,
    "<C-k>": false,
    "<C-l>": false,
    "<C-t>": false,
    "<C-.>": false,
    "<C-h>": true
  },
  "vim.whichwrap": "h,l,<,>,[,]",
  "vim.cursorStylePerMode.normal": "underline",
  "vim.cursorStylePerMode.insert": "line",
  "vim.cursorStylePerMode.replace": "block-outline",
  "vim.cursorStylePerMode.visual": "underline-thin",
  "vim.cursorStylePerMode.visualline": "underline-thin",
  "vim.cursorStylePerMode.visualblock": "block",
  "vim.searchHighlightColor": "rgba(40, 140, 20, 0.5)",
  "vim.highlightedyank.color": "rgba(10, 170, 255, 0.7)",
  "vim.insertModeKeyBindings": [
    {"before": ["j","j"], "after": ["<esc>"]},
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    {"before": ["<leader>", "v"], "commands": ["editor.action.smartSelect.expand"]},
    {"before": ["<leader>","<leader>", "v"], "commands": ["editor.action.smartSelect.shrink"]},
    {"before": ["<leader>", "d"], "after": ["d", "d"]},
    {"before": ["<C-n>"], "commands": [":nohl"]},
    {"before": ["leader", "w"], "commands": ["workbench.action.files.save"]},
    {"before": ["leader", "W"], "commands": ["workbench.action.files.saveAs"]},
    {"before": ["leader", "q"], "commands": ["workbench.action.closeActiveEditor"]},
    {"before": ["leader", "Q"], "commands": ["workbench.action.reopenClosedEditor"]},
    {"before": ["leader", "leader", "w"], "commands": ["workbench.action.files.saveAll"]},
    {"before": ["leader", "leader", "q"], "commands": ["workbench.action.closeEditorsInGroup"]},
    {"before": ["leader", "leader", "Q"], "commands": ["workbench.action.closeAllEditors"]},
    {"before": ["leader", "leader","leader", "q"], "commands": ["workbench.action.closeWindow"]},
    {"before": ["<leader>","f"], "commands": ["workbench.files.action.focusFilesExplorer"]},
    {"before": ["<leader>","n"], "commands": ["workbench.action.nextEditorInGroup"]},
    {"before": ["<leader>","p"], "commands": ["workbench.action.previousEditorInGroup"]},
    {"before": ["<leader>","N"], "commands": ["workbench.action.focusNextGroup"]},
    {"before": ["<leader>","P"], "commands": ["workbench.action.focusPreviousGroup"]},
    {"before": ["<leader>","<leader>","n"], "commands": ["workbench.action.moveEditorRightInGroup"]},
    {"before": ["<leader>","<leader>","p"], "commands": ["workbench.action.moveEditorLeftInGroup"]},
    {"before": ["<leader>","<leader>","N"], "commands": ["workbench.action.moveEditorToNextGroup"]},
    {"before": ["<leader>","<leader>","P"], "commands": ["workbench.action.moveEditorToPreviousGroup"]},
    {"before": ["<leader>", "o"], "commands": ["outline.focus"]},
    {"before": ["<leader>", "m"], "commands": ["bookmarks.toggle"]},
    {"before": ["<leader>", "b"], "commands": ["bookmarks.list"]}
  ],
  "vim.visualModeKeyBindingsNonRecursive": [
    {"before": ["<leader>", "v"], "commands": ["editor.action.smartSelect.expand"]},
    {"before": ["<leader>","<leader>", "v"], "commands": ["editor.action.smartSelect.shrink"]},
    {"before": ["p"],"after": ["p", "g", "v", "y"]},
    {"before": [">"],"commands": ["editor.action.indentLines"]},
    {"before": ["<"],"commands": ["editor.action.outdentLines"]}
  ],
"vim.normalModeKeyBindings": [
    { "before": ["g", "h"], "commands": [ "cursorHome", ] },
    // { "before": ["g", "j"], "commands": [ "cursorBottom", ] },
    // { "before": ["g", "k"], "commands": [ "cursorTop", ] },
    { "before": ["g", "l"], "commands": [ "cursorEnd", ] },
],
  // bookmarks
  // "bookmarks.backgroundLineColor": "#002f5f68",
  "bookmarks.useWorkaroundForFormatters": true,
  "bookmarks.saveBookmarksInProject": true,
  "bookmarks.navigateThroughAllFiles": false,

  // Color Highlight
  "color-highlight.markerType": "dot-after",

  // breadcrumbs
  "breadcrumbs.enabled": true,
  "breadcrumbs.filePath": "on",
  "breadcrumbs.symbolSortOrder": "position",

  "markdownlint.config":
  {
    "default": true,
    "no-inline-html": false,
    "first-line-h1": false,
    "single-h1": false,
    "heading-style": {"style": "atx"},
    "blanks-around-headings": false,
    "blanks-around-lists": false,
    "ul-style": { "style": "consistent" },
    "no-duplicate-heading": true,
    "MD007": false,
    "no-hard-tabs": false,
    "line-length": false
  },

  // Settings for Builtin Functions
  "editor.wrappingIndent": "same",
  "editor.cursorStyle": "underline-thin",
  "window.zoomLevel": 1.3,
  "explorer.confirmDelete": false,
  "explorer.enableDragAndDrop": false,
  "explorer.sortOrder": "type",
  "explorer.openEditors.visible": 9,
  "explorer.autoReveal": true,
  "workbench.editor.closeEmptyGroups": true,
  "prettier.proseWrap": "preserve",
  "workbench.editor.closeOnFileDelete": true,
  "terminal.integrated.cursorStyle": "underline",
  "workbench.colorTheme": "Bronokai",
  "workbench.editor.enablePreviewFromQuickOpen": true,
  "search.quickOpen.includeSymbols": true,
  "workbench.editor.enablePreview": true,
  "workbench.colorCustomizations": {
    // sidebar
    "sideBarSectionHeader.background": "#1177eebb",
    "sideBarSectionHeader.border": "#e8e812ef",
    // list
    "list.focusForeground": "#22bb22ff",
    "list.focusBackground": "#00000022",
    "list.activeSelectionForeground": "#1177bb",
    "list.activeSelectionBackground": "#00aa4844",
    // suggest
    "editorSuggestWidget.selectedBackground": "#000000dd",
    "editorSuggestWidget.background": "#101010df",
    "editorSuggestWidget.foreground": "#dbdfef",
    "contrastActiveBorder": "#00cf0099",
    "contrastBorder": "#22bb2266",
    // "editorSuggestWidget.foreground": "#4488ccff",
    "editorSuggestWidget.border": "#1177bbab",
    // "editorSuggestWidget.highlightForeground": "#c02626ee",
      // cursor
    "editorCursor.foreground": "#d03636ff",
    "editorCursor.background": "#134cd1",
    // word
    "editor.wordHighlightBackground": "#1177bb11",
    "editor.wordHighlightBorder": "#ea5c0058",
    "editor.wordHighlightStrongBackground": "#1177bb23",
    "editor.wordHighlightStrongBorder": "#1177bbcc",
    // line
    "editor.lineHighlightBorder": "#22ee2244",
    "editor.lineHighlightBackground": "#00226622",
    // selection
    "editor.selectionForeground": "#1177eecc",
    "editor.selectionBackground": "#22bb2266",
    "editor.selectionHighlightBackground": "#1177bb44",
    "editor.selectionHighlightBorder": "#1177bb",
    // overview ruler
    "editorOverviewRuler.findMatchForeground": "#00ff0099",
    // line number
    "editorLineNumber.activeForeground": "#22bb22ff",
    "editorLineNumber.foreground": "#1177bb",
    // find match
    "editor.findMatchBorder": "#22bb22dd",
    "editor.findMatchBackground": "#22bb2288",
    "editor.findMatchHighlightBackground": "#ea4646aa",
    "editor.findMatchHighlightBorder": "#d8d812dc",
    // hover
    "editorHoverWidget.background": "#002600bb",
    "editor.rangeHighlightBorder": "#1177bb",
    // Logical Line Highlight
    "highlightLogicalLine.background": "#00000040"
    // "statusBar.background": "#005f5f",
    // "statusBar.noFolderBackground": "#005f5f",
    // "statusBar.debuggingBackground": "#005f5f"
  },
  "editor.tokenColorCustomizations": {
  },
  "files.autoSaveDelay": 5000,
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "javascript.suggest.enabled": true,
  "workbench.editor.revealIfOpen": true,
  "workbench.statusBar.feedback.visible": false,
  "workbench.list.keyboardNavigation": "filter",
  "workbench.list.automaticKeyboardNavigation": false,
  "workbench.editor.focusRecentEditorAfterClose": true,
  "workbench.useExperimentalGridLayout": true,
  "workbench.editor.showTabs": true,
  "workbench.panel.defaultLocation": "right",
  "editor.suggest.snippetsPreventQuickSuggestions": true,
  "editor.wordWrap": "off",
  "editor.renderLineHighlight": "all",
  "editor.trimAutoWhitespace": true,
  "editor.lineHeight": 0,
  "editor.cursorBlinking": "solid",
  "editor.cursorWidth": 4,
  "editor.cursorSmoothCaretAnimation": false,
  "editor.tabCompletion": "onlySnippets",
  "editor.showFoldingControls": "always",
  "editor.links": true,
  "editor.smoothScrolling": true,
  "editor.scrollBeyondLastColumn": 3,
  "editor.roundedSelection": true,
  "editor.glyphMargin": true,
  "editor.dragAndDrop": false,
  "editor.copyWithSyntaxHighlighting": false,
  "editor.codeActionsOnSaveTimeout": 500,
  "editor.formatOnPaste": true,
  "editor.minimap.renderCharacters": false,
  "editor.minimap.side": "right",
  "editor.minimap.showSlider": "always",
  "editor.minimap.maxColumn": 120,
  "editor.acceptSuggestionOnEnter": "smart",
  "editor.snippetSuggestions": "top",
  "editor.parameterHints.enabled": true,
  "editor.quickSuggestionsDelay": 350,
  "editor.quickSuggestions": {
    "other": true,
    "comments": false,
    "strings": true
  },
  "editor.hover.enabled": true,
  "editor.hover.delay": 500,
  "editor.suggest.shareSuggestSelections": true,
  "editor.suggest.localityBonus": true,
  "editor.suggestFontSize": 13,
  "editor.suggestLineHeight": 18,
  "editor.suggestSelection": "recentlyUsedByPrefix",
  "editor.suggest.filteredTypes": {
    "keyword": true
  },
  "font-switcher.enableLivePreview": true,
  "font-switcher.fontFamily": "Consolas, DejaVu Sans Mono, monospace, Fira Code, Fira Mono, Inconsolata, Roboto Mono, FontAwesome, Hack, Noto Mono",
  "editor.fontFamily": "Fira Code",
  "editor.fontSize": 18,
  "editor.fontWeight": "normal",
  "editor.fontLigatures": false,
  "editor.wordBasedSuggestions": false,
  "editor.codeActionsOnSave": {
    "source.fixAll": true,
    "source.organizeImports": true
  },
  "javascript.suggest.completeFunctionCalls": true,
  "typescript.suggest.completeFunctionCalls": true,
  "extensions.ignoreRecommendations": true,
  "extensions.showRecommendationsOnlyOnDemand": true,
  "pandoc.docxOptString": "",
  "pandoc.htmlOptString": "-s -t html5 --css=css/style.css",
  "[markdown]": {
    "editor.wordWrap": "on",
    "editor.wrappingIndent": "none",
    "editor.insertSpaces": false,
    "editor.quickSuggestions": false
  },
  // "[json]": {
  //   "editor.defaultFormatter": "esbenp.prettier-vscode"
  // },
  "window.openWithoutArgumentsInNewWindow": "off",
  "search.maintainFileSearchCache": true,
  "search.location": "sidebar",
  "extensions.closeExtensionDetailsOnViewChange": true,
  "telemetry.enableCrashReporter": false,
  "yaml.format.enable": true,
  "editor.multiCursorModifier": "ctrlCmd",
  "markdown-link-suggestions.allowFullSuggestMode": true,
  "workbench.enableExperiments": false,
  "workbench.iconTheme": "vs-seti",
  "workbench.tree.indent": 20,
  "workbench.view.alwaysShowHeaderActions": true,
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.editor.openPositioning": "last",
  "workbench.editor.restoreViewState": false,

  // Other Extension Settings
  "wolf.pythonPath": "/usr/bin/python3",
  "code-runner.enableAppInsights": false,
  "macros": {
    "commentDown": [
      "editor.action.copyLinesDownAction",
      "cursorUp",
      "editor.action.addCommentLine",
      "cursorDown"
    ],
    "logCurrentVariable": [
      "editor.action.addSelectionToNextFindMatch",
      "problems.action.copy",
      {
        "command": "type",
        "args": {
          "text": "con"
        }
      }
    ],
    "showFileAndFocus": [
      "workbench.files.action.showActiveFileInExplorer",
      "workbench.files.action.focusFilesExplorer"
    ],
    "fastOpenFile": [
      "list.select", // open current hover file
      "wait:50", // wait for 20ms before next (default 50ms)
      "workbench.action.focusSideBar" // send focus back to the file explorer
    ],
    "openAndKeepFile": [
      "list.select", // open current hover file
      "workbench.action.files.save", // this will keep the file open
      "wait:20", // wait for 20ms before next (default 50ms)
      "workbench.action.focusSideBar" // send focus back to the file explorer
    ],
    "openFile": [
      "list.select", // open current hover file
      "workbench.action.files.save" // this will keep the file open
    ]
  },
  "multiCommand.commands": [
    {
      "command": "multiCommand.down8Lines",
      "label": "down8Lines",
      "description": "down the cursor in 8 times",
      "sequence": [
        { "command": "cursorMove", "args": { "to": "down", "value": 8 } },
        {
          "command": "editorScroll",
          "args": { "to": "down", "value": 8, "revealCursor": true }
        }
      ]
    },
    {
      "command": "multiCommand.up8Lines",
      "label": "up8Lines",
      "description": "up the cursor in 8 times",
      "sequence": [
        { "command": "cursorMove", "args": { "to": "up", "value": 8 } },
        {
          "command": "editorScroll",
          "args": { "to": "up", "value": 8, "revealCursor": true }
        }
      ]
    },
    {
      "command": "multiCommand.swapChar",
      "interval": 30,
      "sequence": [
        "cursorLeftSelect",
        "editor.action.clipboardCutAction",
        "cursorRight",
        "editor.action.clipboardPasteAction"
      ]
    }
  ],
  "markdownlint.run": "onSave",
  "reflowMarkdown.resizeHeaderDashLines": true,
