  // Key Bindings
  "vim.insertModeKeyBindings": [],
  "vim.insertModeKeyBindingsNonRecursive": [
    { "before": ["<C-j>"], "after": ["<esc>", "l"]  },
    { "before": [",", "."], "after": ["<esc>", "l"]  },
    { "before": [".", ","], "after": ["<esc>"]  },
  ],



  "vim.normalModeKeyBindingsNonRecursive": [
    { "before": ["<leader>", "v"], "commands": ["editor.action.smartSelect.expand"]  },
    { "before": ["<leader>", "<leader>", "v"], "commands": ["editor.action.smartSelect.shrink"]  },
    { "before": ["<leader>", "V"], "commands": ["expandLineSelection"]  },
    { "before": ["<C-n>"], "commands": [":nohl"]  },
    { "before": ["<leader>","/"], "commands": [":nohl"]  },
    { "before": ["<leader>", "w"], "commands": ["workbench.action.files.save"]  },
    { "before": ["<leader>", "q"], "commands": ["workbench.action.closeActiveEditor", "workbench.files.action.focusFilesExplorer"]  },
    { "before": ["Z","Z"], "commands": ["workbench.action.files.save", "workbench.action.closeActiveEditor", "workbench.files.action.focusFilesExplorer"]  },
    { "before": ["<leader>", "<leader>", "q"], "commands": [":wq!"]  },
    { "before": ["leader", "leader", "leader", "q"], "commands": ["workbench.action.closeWindow"]  },
    { "before": ["<leader>", "f"], "commands": ["workbench.files.action.focusFilesExplorer"]  },
    { "before": ["<leader>",",t","n"], "commands": ["workbench.action.nextEditorInGroup"]  },
    { "before": ["<leader>",",t","p"], "commands": ["workbench.action.previousEditorInGroup"]  },
    // { "before": ["<leader>", "N"], "commands": ["workbench.action.focusNextGroup"]  },
    // { "before": ["<leader>", "P"], "commands": ["workbench.action.focusPreviousGroup"]  },
    { "before": ["<leader>", "<leader>", "n"], "commands": ["workbench.action.moveEditorRightInGroup"]  },
    { "before": ["<leader>", "<leader>", "p"], "commands": ["workbench.action.moveEditorLeftInGroup"]  },
    { "before": ["<leader>", "<leader>", "N"], "commands": ["workbench.action.moveEditorToNextGroup"]  },
    { "before": ["<leader>", "<leader>", "P"], "commands": ["workbench.action.moveEditorToPreviousGroup"]  },
    { "before": ["<leader>", "o"], "commands": ["outline.focus"]  },
    { "before": ["<leader>", "m"], "commands": ["bookmarks.toggle"]  },
    { "before": ["<leader>","<leader>", "<leader>", "b"], "commands": ["bookmarks.list"]  },
    { "before": ["<leader>", "B"], "commands": ["bookmarks.jumpToPrevious"]  },
    { "before": ["<leader>", "b"], "commands": ["bookmarks.jumpToNext"]  },
{ "before": [">"], "commands": ["editor.action.indentLines"]  },
    { "before": ["<"], "commands": ["editor.action.outdentLines"]  },
    { "before": ["<leader>", "j"], "after": ["v","J","<esc>","g","_"]  },
    { "before": ["J"], "after": ["1","2","g","j"]  },
    { "before": ["K"], "after": ["1","2","g","k"]  },
    // { "before": ["<leader>", "d"], "after": [ "\"","z","d","d"]  },
    // { "before": ["<leader>","<leader>","d"], "after": [ "\"","Z","d","d"]  },
    // { "before": ["<leader>","P"], "after": ["\"","z","p"]  },
  ],


  "vim.normalModeKeyBindings": [
    // note can bind instead to simply "^" and reserve wrapping jump for gH
    // could also bind to commands: cursorLineEnd or cursorLineStart
    { "before": ["H"], "after": ["^"]  },
    { "before": ["L"], "after": ["$"]  },
    { "before": ["g","H"], "after": ["H","z","z"]  },
    { "before": ["g","L"], "after": ["L","z","z"]  },
    { "before": ["Y"], "after": ["y", "$"]  },
  ],
  "vim.visualModeKeyBindingsNonRecursive": [
    { "before": ["<leader>", "v"], "commands": ["editor.action.smartSelect.expand"]  },
